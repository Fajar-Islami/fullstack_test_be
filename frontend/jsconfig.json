{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["views/components/*"],
      "@template/*": ["views/template/*"],
      "@container/*": ["views/container/*"],
      "@mocks/*": ["__mocks__/*"],
      "@utils/*": ["utils/*"],
      "@icons/*": ["icons/*"],
      "@common/*": ["common/*"],
      "@api/*": ["pages/api/*"],

      "@data/*": ["data/*"],
      "@contexts/*": ["contexts/*"],
      "@hook/*": ["hooks/*"],
      "@interfaces/*": ["interfaces/*"],
      "@reducers/*": ["reducers/*"],
      "@generated/*": ["generated/*"],
      "@entity/*": ["entity/*"],
      "@service/*": ["service/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
